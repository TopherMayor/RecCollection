{
  "name": "reccollection-backend",
  "module": "src/server.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "nodemon --exec ts-node --esm --project tsconfig.json src/server.ts",
    "dev:bun": "bun run --watch src/server.ts",
    "build": "tsc && node esbuild.config.js",
    "build:bun": "bun build src/server.ts --outdir dist",
    "start": "node dist/server.js",
    "start:bun": "bun run dist/server.js",
    "db:generate": "drizzle-kit generate",
    "db:generate:bun": "bun drizzle-kit generate",
    "db:migrate": "node src/db/migrate.ts",
    "db:migrate:bun": "bun run src/db/migrate.ts",
    "db:seed": "node src/db/seed.ts",
    "db:seed:bun": "bun run src/db/seed.ts",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "db:setup:bun": "bun run db:migrate && bun run db:seed",
    "db:run-migrations": "node src/db/migrations/run_migrations.ts",
    "db:run-migrations:bun": "bun run src/db/migrations/run_migrations.ts",
    "db:studio": "drizzle-kit studio",
    "db:studio:bun": "bun drizzle-kit studio",
    "db:add-recipes": "node src/scripts/add-sample-recipes.ts",
    "db:add-recipes:bun": "bun run src/scripts/add-sample-recipes.ts",
    "test": "vitest run",
    "test:bun": "bun test src/tests"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bun": "latest",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.11.30",
    "@types/nodemailer": "^6.4.14",
    "drizzle-kit": "^0.30.6",
    "esbuild": "^0.20.2",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3",
    "vitest": "^1.4.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.0",
    "@hono/zod-validator": "^0.4.3",
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.41.0",
    "hono": "^4.7.5",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.1.5",
    "node-fetch": "2",
    "nodemailer": "^6.9.13",
    "openai": "^4.93.0",
    "postgres": "^3.4.5",
    "puppeteer": "^24.6.1",
    "twilio": "^5.0.0",
    "youtube-transcript": "^1.2.1",
    "zod": "^3.24.2"
  }
}
